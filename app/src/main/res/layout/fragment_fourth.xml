<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/tv_doctor_diagnosis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_40"
            android:paddingTop="16dp"
            android:paddingEnd="@dimen/dp_40"
            android:paddingBottom="16dp"
            android:text="中医诊断"
            android:textColor="@color/greyText"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/tv_intervention_plan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_40"
            android:paddingTop="16dp"
            android:paddingEnd="@dimen/dp_40"
            android:paddingBottom="16dp"
            android:text="干预方案"
            android:textColor="@color/greyText"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/tv_recommend_prescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_40"
            android:paddingTop="16dp"
            android:paddingEnd="@dimen/dp_40"
            android:paddingBottom="16dp"
            android:text="推荐处方"
            android:textColor="@color/greyText"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/tv_recommend_food"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_40"
            android:paddingTop="16dp"
            android:paddingEnd="@dimen/dp_40"
            android:paddingBottom="16dp"
            android:text="推荐食疗"
            android:textColor="@color/greyText"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/tv_recommend_drug"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_40"
            android:paddingTop="16dp"
            android:paddingEnd="@dimen/dp_40"
            android:paddingBottom="16dp"
            android:text="推荐药品"
            android:textColor="@color/greyText"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/tv_recommend_others"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_40"
            android:paddingTop="16dp"
            android:paddingEnd="@dimen/dp_40"
            android:paddingBottom="16dp"
            android:text="其他推荐产品"
            android:textColor="@color/greyText"
            android:textSize="30dp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ll"
        app:layout_constraintStart_toStartOf="@id/ll"
        app:layout_constraintEnd_toEndOf="@id/ll"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>